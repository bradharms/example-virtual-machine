{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "tendril/*": [
                "./src/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "target": "ES2018",
        "module": "commonjs",
        "allowJs": true
    },
    "include": [
        "bin/**/*",
        "program-src/**/*",
        "src/**/*"
    ]
}